  "dialogos": [
    {
      "id": "zari_01",
      "personaje": "Zarita",
      "texto": "Calma, calma niños. Imploro.",
      "siguiente": "zari_02"
    },
    {
      "id": "zari_02",
      "personaje": "Irene",
      "texto": "¡Pero mamá! ¡He perdido mi muñeca!",
      "siguiente": "zari_03"
    },
    {
      "id": "zari_03",
      "personaje": "Luca",
      "texto": "¡Y yo la mía!",
      "siguiente": "zari_04"
    },
    {
      "id": "zari_04",
      "personaje": "Marc",
      "texto": "Gugú tata...",
      "siguiente": "zari_05"
    },
    {
      "id": "zari_05",
      "personaje": "Zarita",
      "texto": "Oh, hola Pochi. Perdona el alboroto.",
      "siguiente": "zari_06"
    },
    {
      "id": "zari_06",
      "personaje": "Pochi",
      "texto": "Hola Zarita. ¿Necesitáis ayuda?",
      "siguiente": "zari_07"
    },
    {
      "id": "zari_07",
      "personaje": "Zarita",
      "texto": "Sí, por favor. Irene, Luca y Marc han perdido sus muñecas por la plaza. Si las encuentras...",
      "siguiente": "zari_08"
    },
    {
      "id": "zari_08",
      "personaje": "Pochi",
      "texto": "Las buscaré. A cambio, ¿sabes algo de Kara?",
      "siguiente": "zari_09"
    },
    {
      "id": "zari_09",
      "personaje": "Zarita",
      "texto": "Puede ser... Encuentra las muñecas y hablaremos.",
      "accion": "activar_busqueda_munecas"
    },
    {
      "id": "zari_buscar_01",
      "personaje": "Zarita",
      "texto": "Están por aquí cerca."
    },
    {
      "id": "zari_sin_munecas",
      "personaje": "Zarita",
      "texto": "¿Aún no las tienes todas? A los niños les va a dar algo."
    },
    {
      "id": "zari_con_munecas_01",
      "personaje": "Zarita",
      "texto": "¡Las has encontrado! ¡Mil gracias!",
      "siguiente": "zari_con_munecas_02"
    },
    {
      "id": "zari_con_munecas_02",
      "personaje": "Irene",
      "texto": "¡Mi muñeca! ¡Gracias Pochi!",
      "siguiente": "zari_con_munecas_03"
    },
    {
      "id": "zari_con_munecas_03",
      "personaje": "Zarita",
      "texto": "Pero... ¡Están rotas! Oh, no. Pochi, ¿tú dibujas, verdad? ¿Podrías arreglarles las caras?",
      "accion": "desbloquear_puzle_munecas"
    },
    {
      "id": "zari_sin_partes",
      "personaje": "Zarita",
      "texto": "Necesitan caras nuevas, Pochi. Por favor."
    },
    {
      "id": "zari_caras_mal",
      "personaje": "Irene",
      "texto": "¡Esa no es mi muñeca! ¡Buaaaah!"
    },
    {
      "id": "zari_caras_bien_01",
      "personaje": "Zarita",
      "texto": "¡Están perfectas! Eres un artista, Pochi.",
      "siguiente": "zari_caras_bien_02"
    },
    {
      "id": "zari_caras_bien_02",
      "personaje": "Irene",
      "texto": "¡Sí! ¡Me encanta!",
      "siguiente": "zari_caras_bien_03"
    },
    {
      "id": "zari_caras_bien_03",
      "personaje": "Luca",
      "texto": "¡A mí también!",
      "siguiente": "zari_caras_bien_04"
    },
    {
      "id": "zari_caras_bien_04",
      "personaje": "Marc",
      "texto": "¡Tata!",
      "siguiente": "zari_caras_bien_05"
    },
    {
      "id": "zari_caras_bien_05",
      "personaje": "Zarita",
      "texto": "Bueno, lo prometido es deuda.",
      "siguiente": "zari_caras_bien_06"
    },
    {
      "id": "zari_caras_bien_06",
      "personaje": "Zarita",
      "texto": "Vi a Kara el otro día. Parecía triste.",
      "siguiente": "zari_caras_bien_07"
    },
    {
      "id": "zari_caras_bien_07",
      "personaje": "Pochi",
      "texto": "¿Podrías describir a Kara?",
      "siguiente": "zari_caras_bien_08"
    },
    {
      "id": "zari_caras_bien_08",
      "personaje": "Luca",
      "texto": "Mami, quiero ir a casa.",
      "siguiente": "zari_caras_bien_09"
    },
    {
      "id": "zari_caras_bien_09",
      "personaje": "Marc",
      "texto": "Mamá tengo sueño.",
      "siguiente": "zari_caras_bien_10"
    },
    {
      "id": "zari_caras_bien_10",
      "personaje": "Zarita",
      "texto": "Un momento, niños.",
      "siguiente": "zari_caras_bien_11"
    },
    {
      "id": "zari_caras_bien_11",
      "personaje": "Zarita",
      "texto": "La verdad no me acuerdo mucho. Pero tenía las cejas…",
      "siguiente": "zari_caras_bien_12"
    },
    {
      "id": "zari_caras_bien_12",
      "personaje": "Irene",
      "texto": "MAMÁ!!!",
      "siguiente": "zari_caras_bien_13"
    },
    {
      "id": "zari_caras_bien_13",
      "personaje": "Zarita",
      "texto": "¡Ya voy! Lo siento Pochi, las cejas... eran finas. ¡Adiós!",
      "accion": "completar_mision_zari"
    }
  ]
}