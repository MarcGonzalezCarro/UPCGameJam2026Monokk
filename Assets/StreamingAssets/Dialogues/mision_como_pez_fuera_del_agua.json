  ],
  "dialogos": [
    { "id": "maca_01", "personaje": "Maca", "texto": "Mmmm…", "siguiente": "maca_02" },
    { "id": "maca_02", "personaje": "Pochi", "texto": "Maca, ¿qué tal estás?", "siguiente": "maca_03" },
    { "id": "maca_03", "personaje": "Maca", "texto": "Ay, hola Pochi. Podría estar mejor, ¿tú?", "siguiente": "maca_04" },
    { "id": "maca_04", "personaje": "Pochi", "texto": "Un poco mal, necesito ayuda describiendo el rostro de Kara, ¿tú te acuerdas de como es?", "siguiente": "maca_05" },
    { "id": "maca_05", "personaje": "Maca", "texto": "Sí, me acuerdo de que PERRO la describió alguna que otra vez. Yo estoy en las mismas. Sé que llevaba una camiseta azul, y que si lo veo lo reconoceré, pero no sé donde está Rubén.", "siguiente": "maca_06" },
    { "id": "maca_06", "personaje": "Pochi", "texto": "¿Te ha dejado aquí sola?", "siguiente": "maca_07" },
    { "id": "maca_07", "personaje": "Maca", "texto": "Sí, ya sabes, como soy un pez me trae muchas veces al lago para que disfrute de mi hábitat.", "siguiente": "maca_08" },
    { "id": "maca_08", "personaje": "Pochi", "texto": "Un-", "siguiente": "maca_09" },
    { "id": "maca_09", "personaje": "Maca", "texto": "Pero ha tenido una urgencia y me ha dejado aquí solita.", "siguiente": "maca_10" },
    { "id": "maca_10", "personaje": "Pochi", "texto": "Qué mal. Pero, ¿me puedes ayudar?", "siguiente": "maca_11" },
    { "id": "maca_11", "personaje": "Maca", "texto": "Supongo… ¡¿Es esa la libreta de dueña?!", "siguiente": "maca_12" },
    { "id": "maca_12", "personaje": "Pochi", "texto": "Sí-", "siguiente": "maca_13" },
    { "id": "maca_13", "personaje": "Maca", "texto": "Pochi, yo te diré todo lo que sé de Kara, pero a cambio, te lo ruego, encuentra a Rubén.", "siguiente": "maca_14" },
    { "id": "maca_14", "personaje": "Pochi", "texto": "¿Cómo quieres que-?", "siguiente": "maca_15" },
    { "id": "maca_15", "personaje": "Maca", "texto": "Pregúntale a los humanos que te describan a alguien con camiseta azul, y cuando lo tengas, tráemelo ¡gracias por adelantado!", "accion": "activar_mision_dueno", "siguiente": "maca_16" },
    { "id": "maca_16", "personaje": "Pochi", "texto": "Pero…", "siguiente": "maca_17" },
    { "id": "maca_17", "personaje": "Pochi", "texto": "No parece que quiera ayudarme." },

    { "id": "maca_sin_dibujos", "personaje": "Maca", "texto": "¿No los tienes? Quiero volver a mi pecera…", "siguiente": "maca_sin_dibujos_02" },
    { "id": "maca_sin_dibujos_02", "personaje": "Pochi", "texto": "Eh, estoy en ello." },

    { "id": "entrevista_1_01", "personaje": "Pochi", "texto": "Perdone señor@, ¿ha visto a una persona con camiseta azul?", "siguiente": "entrevista_1_02" },
    { "id": "entrevista_1_02", "personaje": "PERSONA", "texto": "Eh, no. Perdón." },

    { "id": "entrevista_2_01", "personaje": "Pochi", "texto": "Perdone señor@, ¿ha visto a una persona con camiseta azul?", "siguiente": "entrevista_2_02" },
    { "id": "entrevista_2_02", "personaje": "PERSONA", "texto": "¡Un perro que habla!", "siguiente": "entrevista_2_03" },
    { "id": "entrevista_2_03", "personaje": "Pochi", "texto": "Perdona-", "siguiente": "entrevista_2_04" },
    { "id": "entrevista_2_04", "personaje": "PERSONA", "texto": "¡Aaaaah!", "siguiente": "entrevista_2_05" },
    { "id": "entrevista_2_05", "personaje": "Pochi", "texto": "No creo que esté por la labor." },

    { "id": "entrevista_3_01", "personaje": "Pochi", "texto": "Perdone señor@, ¿ha visto a una persona con camiseta azul?", "siguiente": "entrevista_3_02" },
    { "id": "entrevista_3_02", "personaje": "PERSONA", "texto": "Uy, yo soy disléxico de colores, no te sabría decir.", "siguiente": "entrevista_3_03" },
    { "id": "entrevista_3_03", "personaje": "Pochi", "texto": "¿Daltónico?", "siguiente": "entrevista_3_04" },
    { "id": "entrevista_3_04", "personaje": "PERSONA", "texto": "¿Eh? No tengo ningún tónico. Bueno, adiós." },

    { "id": "maca_dibujos_mal", "personaje": "Maca", "texto": "No reconozco a nadie, sigue intentándolo…", "siguiente": "maca_dibujos_bien_01" },

    { "id": "maca_dibujos_bien_01", "personaje": "Maca", "texto": "¡Rubén! Es el, ¡es Rubén!", "siguiente": "maca_dibujos_bien_02" },
    { "id": "maca_dibujos_bien_02", "personaje": "Pochi", "texto": "Me alegro…", "siguiente": "maca_dibujos_bien_03" },
    { "id": "maca_dibujos_bien_03", "personaje": "Maca", "texto": "¿Hacia dónde has dicho que se ha ido?", "siguiente": "maca_dibujos_bien_04" },
    { "id": "maca_dibujos_bien_04", "personaje": "Pochi", "texto": "Hacia el parque…", "siguiente": "maca_dibujos_bien_05" },
    { "id": "maca_dibujos_bien_05", "personaje": "Maca", "texto": "¡Okay! ¡Hacia allà voy!", "siguiente": "maca_dibujos_bien_06" },
    { "id": "maca_dibujos_bien_06", "personaje": "Pochi", "texto": "Espera. ¿Qué recuerdas de Kara?", "siguiente": "maca_dibujos_bien_07" },
    { "id": "maca_dibujos_bien_07", "personaje": "Maca", "texto": "Mmm.. La boca, la tenía… ¡Me voy!", "accion": "cerrar_mision_maca" },

    { "id": "sin_cara_maca_01", "personaje": "Pochi", "texto": "Espera-", "siguiente": "sin_cara_maca_02" },
    { "id": "sin_cara_maca_02", "personaje": "Pochi", "texto": "Al menos ahora sé cómo era la boca de Kara." },

    { "id": "con_cara_maca_01", "personaje": "Pochi", "texto": "¡Es la última pieza que me faltaba! ¡Por fin!", "siguiente": "con_cara_maca_02" },
    { "id": "con_cara_maca_02", "personaje": "Pochi", "texto": "¡Tengo que ir a casa y dibujarlo en la libreta especial de Kara!" }
  ]
}