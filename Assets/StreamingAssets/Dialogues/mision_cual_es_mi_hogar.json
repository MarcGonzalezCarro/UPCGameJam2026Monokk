  "dialogos": [
    {
      "id": "gato_01",
      "personaje": "Holla",
      "texto": "¡Pochi!",
      "siguiente": "gato_02"
    },
    {
      "id": "gato_02",
      "personaje": "Pochi",
      "texto": "Hola Holla, ¿qué haces aquí fuera? Pensaba que eras hogareña.",
      "siguiente": "gato_03"
    },
    {
      "id": "gato_03",
      "personaje": "Holla",
      "texto": "Y lo soy, nunca mentiría sobre eso. Pero he visto algo... o a alguien.",
      "siguiente": "gato_04"
    },
    {
      "id": "gato_04",
      "personaje": "Pochi",
      "texto": "¿A quién?",
      "siguiente": "gato_05"
    },
    {
      "id": "gato_05",
      "personaje": "Holla",
      "texto": "A tu dueña, Kara.",
      "siguiente": "gato_06"
    },
    {
      "id": "gato_06",
      "personaje": "Pochi",
      "texto": "¡¿A Kara?! ¿Dónde?",
      "siguiente": "gato_07"
    },
    {
      "id": "gato_07",
      "personaje": "Holla",
      "texto": "Ah... mi memoria es frágil. Quizás si me refrescas la memoria con un dibujo de ella...",
      "siguiente": "gato_08"
    },
    {
      "id": "gato_08",
      "personaje": "Pochi",
      "texto": "Está bien, veré qué puedo hacer.",
      "accion": "desbloquear_puzle_gato"
    },
    {
      "id": "gato_falta_caras",
      "personaje": "Holla",
      "texto": "¿Ya tienes el dibujo? Aún no me acuerdo de nada."
    },
    {
      "id": "gato_cara_mal",
      "personaje": "Holla",
      "texto": "Mmm... no me suena esa cara. Sigue intentándolo."
    },
    {
      "id": "gato_cara_bien",
      "personaje": "Holla",
      "texto": "…",
      "siguiente": "gato_cara_bien_02"
    },
    {
      "id": "gato_cara_bien_02",
      "personaje": "Pochi",
      "texto": "¿Entonces? ¿Lo reconoces?",
      "siguiente": "gato_cara_bien_03"
    },
    {
      "id": "gato_cara_bien_03",
      "personaje": "Holla",
      "texto": "¡Espléndido! ¡Brillante! Le va a encantar, muchas gracias Pochi.",
      "siguiente": "gato_cara_bien_04"
    },
    {
      "id": "gato_cara_bien_04",
      "personaje": "Pochi",
      "texto": "¿Qué…?",
      "siguiente": "gato_cara_bien_05"
    },
    {
      "id": "gato_cara_bien_05",
      "personaje": "Holla",
      "texto": "Da igual pequeñín. Tengo prisa, los ojos de Kara eran…",
      "siguiente": "gato_cara_bien_06"
    },
    {
      "id": "gato_cara_bien_06",
      "personaje": "Holla",
      "texto": "Verdes. ¡Sí, verdes! Adiós.",
      "accion": "completar_mision_gato"
    }
  ]
}